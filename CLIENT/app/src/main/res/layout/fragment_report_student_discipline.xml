<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReportStudentDisciplineFragment" >

    <ListView
        android:id="@+id/view_students_choice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/list_bg_land" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_to_word"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/Word"
            android:insetTop="0dp"
            android:text="@string/btn_word"
            app:icon="@drawable/ic_word_doc" />

        <Button
            android:id="@+id/button_to_excel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/Excel"
            android:insetTop="0dp"
            android:text="@string/btn_excel"
            app:icon="@drawable/ic_excel_doc" />
    </LinearLayout>
</LinearLayout>